---
const { user } = Astro.props;
---
<div 
    class="relative py-4 px-8 rounded-none  max-w-full h-[25rem] w-[25rem]  flex flex-col content-start items-center justify-start transition-transform hover:scale-105 duration-300 overflow-hidden group pixel-card"
    style="image-rendering: pixelated; background-image: url('/src/image/R.png'); background-size: cover; background-position: center;">
    <div class="relative mt-4 mb-3">
        <div class="absolute w-16 h-16 border-2 border-[#3E3E3E] rounded-none z-0"></div>
        <img src={user.picture.large} alt={`Photo de ${user.name.first}`} class="z-10 rounded-none w-16 h-16 object-cover border-2 border-[#fff] shadow-pixel pixel-avatar" style="image-rendering: pixelated;" />
    </div>
    <ul class="w-full px-1 space-y-2 font-minecraft text-sm gap-1">
        <li class="font-black text-[#222] text-lg text-center tracking-widest uppercase bg-[#fff]/90 border border-[#3E3E3E] rounded-none shadow-pixel py-1 px-2 truncate">
            {user.name.first}
        </li>
        <li class="flex flex-wrap items-center font-semibold text-[#3E3E3E] py-1 px-3 text-sm text-center bg-[#fff]/90 border border-[#3E3E3E] rounded-none shadow-pixel truncate">
            <span class="whitespace-nowrap">Nom:&nbsp;</span>
            <span class="text-[#6AAC4B] break-all">{user.name.last}</span>
        </li>
        <li class="flex flex-wrap items-center text-[#3E3E3E] text-sm py-1 px-3 text-center bg-[#fff]/90 border border-[#3E3E3E] rounded-none shadow-pixel truncate">
            <span class="whitespace-nowrap">Genre:&nbsp;</span>
            <span class="capitalize font-bold text-[#8B5C2A] break-all">{user.gender}</span>
        </li>
        <li class="flex flex-wrap items-center text-[#3E3E3E] text-sm py-1 px-3 text-center bg-[#fff]/90 border border-[#3E3E3E] rounded-none shadow-pixel truncate">
            <span class="whitespace-nowrap">Email:&nbsp;</span>
            <span class="underline decoration-[#6AAC4B] break-all">{user.email}</span>
        </li>
        <li class="flex flex-wrap items-center text-[#3E3E3E] text-xs py-1 px-3 text-center bg-[#fff]/90 border border-[#3E3E3E] rounded-none shadow-pixel truncate">
            <span class="whitespace-nowrap">Téléphone:&nbsp;</span>
            <span class=" bg-[#fff]/70  rounded-none font-minecraft shadow-inner ">{user.phone}</span>
        </li>
    </ul>
    <div class="mt-3 flex justify-center w-full">
        <button class="z-10 mt-2 mb-0.5 bg-[#8B5C2A] text-[#fff] font-extrabold py-2 px-4 rounded-none shadow-pixel border-2 border-[#3E3E3E] tracking-wider uppercase font-minecraft hover:bg-[#6AAC4B] hover:text-[#222] transition-all duration-200 text-sm">
            Voir Profil 
        </button>
    </div>
</div>

<style>
@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap');
.font-minecraft {
    font-family: 'Press Start 2P', monospace;
    font-size: 10px;
    letter-spacing: 1px;
}
.shadow-pixel {
    box-shadow: 4px 4px 0 0 #222;
}
.pixel-avatar {
    image-rendering: pixelated;
}
.pixel-card {
    border-radius: 0;
}
</style>
